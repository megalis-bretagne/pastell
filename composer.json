{
  "name": "libriciel/pastell",
  "description": "Pastell est un bus logiciel permettant de créer des documents (flux) et de les faire cheminer entre différents systèmes externe par le biais de connecteur",
  "license": "AGPL-3.0-only",
  "require": {
    "php": "7.2.*",
    "ext-PDO": "^7.2",
    "ext-Phar": "^2.0",
    "ext-SimpleXML": "^7.2",
    "ext-Zend-OPcache": "^7.2",
    "ext-bcmath": "^7.2",
    "ext-curl": "^7.2",
    "ext-dom": "*",
    "ext-fileinfo": "^1.0",
    "ext-imap": "^7.2",
    "ext-json": "^1.6",
    "ext-ldap": "^7.2",
    "ext-libxml": "^7.2",
    "ext-mbstring": "^7.2",
    "ext-openssl": "^7.2",
    "ext-pdo_mysql": "^7.2",
    "ext-posix": "^7.2",
    "ext-redis": ">3.1",
    "ext-soap": "^7.2",
    "ext-ssh2": "*",
    "ext-xsl": "^7.2",
    "ext-zip": "^1.15",
    "dkd/php-cmis": "^1.0",
    "dragonmantank/cron-expression": "^3.1",
    "erusev/parsedown": "^1.7",
    "ezyang/htmlpurifier": "^4.13",
    "flowjs/flow-php-server": "^1.0",
    "guzzlehttp/guzzle": "^5.3",
    "guzzlehttp/psr7": "^1.8",
    "jasig/phpcas": "^1.4",
    "jumbojett/openid-connect-php": "^0.8.0",
    "maennchen/zipstream-php": "^0.5.0",
    "malkusch/lock": "^2.2",
    "monolog/monolog": "^1.26",
    "mustangostang/spyc": "^0.6.2",
    "nicolab/php-ftp-client": "^1.6",
    "paragonie/halite": "^4",
    "pear/http_request2": "2.3.*",
    "pear/pear": "^1.10",
    "pear/xml_rpc2": "^1.1",
    "php-http/discovery": "^1.14",
    "phpseclib/phpseclib": "^2.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "sabre/dav": "^3.2",
    "sentry/sdk": "^2.2",
    "softcreatr/jsonpath": "^0.7.4",
    "symfony/console": "^4.4",
    "symfony/filesystem": "^5.4",
    "symfony/http-client": "^5.4",
    "symfony/lock": "^5.4",
    "twig/twig": "^3.3"
  },
  "require-dev": {
    "ext-pcov": "^1.0",
    "codeception/codeception": "^2.5",
    "mikey179/vfsstream": "^1.6",
    "pcov/clobber": "^2.0",
    "pdepend/pdepend": "^2.10",
    "phploc/phploc": "^4.0",
    "phpmd/phpmd": "^2.11",
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "3.*"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "rm -rf web/node_modules",
      "ln -s ../node_modules web/node_modules",
      "rm -rf web-mailsec/node_modules",
      "ln -s ../node_modules web-mailsec/node_modules"
    ],
    "post-update-cmd": [
    ],
    "test": "phpunit",
    "test-cover": "phpunit --coverage-text --colors=never --coverage-clover coverage/coverage.xml --log-junit coverage/logfile.xml",
    "codecept": "codecept -c test/codeception/codeception.yml run",
    "phpcs": "phpcs -ps --standard=ruleset.xml --ignore=vendor/,node_modules/,web/,web-mailsec/,temp/ ./",
    "phpcbf": "phpcbf -ps --standard=ruleset.xml --ignore=vendor/,node_modules/,web/,web-mailsec/,temp/ ./"
  },
  "autoload": {
    "psr-4": {
      "Pastell\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pastell\\Tests\\": "tests/"
    }
  }
}
