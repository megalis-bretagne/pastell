  "require-dev": {
    "phpunit/php-code-coverage": "^5.2",
    "phpunit/phpunit": "^6.4",
    "sebastian/version": "^2.0",
    "phploc/phploc": "^4.0",
    "sebastian/global-state": "^2.0",
