  "license" : "CECILL-2.0",

  "require": {
    "php": "7.2.*",

    "ext-bcmath": "^7.2",
    "ext-curl": "^7.2",
    "ext-fileinfo": "^1.0",
    "ext-imap": "^7.2",
    "ext-json": "^1.6",
    "ext-ldap": "^7.2",
    "ext-mbstring": "^7.2",
    "ext-openssl": "^7.2",
    "ext-PDO": "^7.2",
    "ext-pdo_mysql": "^7.2",
    "ext-Phar": "^2.0",
    "ext-redis": ">3.1",
    "ext-SimpleXML": "^7.2",
    "ext-soap": "^7.2",
    "ext-ssh2": "*",
    "ext-zip": "^1.15",
    "ext-Zend-OPcache": "^7.2",

    "mtdowling/cron-expression": "^1.2",
    "codeception/codeception": "^2.2",
    "ezyang/htmlpurifier": "^4.9",
    "erusev/parsedown": "^1.6",
    "phpseclib/phpseclib": "^2.0",
    "sabre/dav": "^3.2",
    "maennchen/zipstream-php": "^0.5.0",
    "nicolab/php-ftp-client": "^1.4",
    "guzzlehttp/guzzle": "^5.3",
    "dkd/php-cmis": "^1.0",
    "monolog/monolog": "^1.23",
    "flowjs/flow-php-server": "^1.0",
    "forkawesome/fork-awesome": "^1.1",
    "components/jquery": "^3.3",
    "select2/select2": "^4.0",
    "components/jqueryui": "^1.12",
    "twbs/bootstrap": "^4.2",
    "jasig/phpcas": "^1.3",
